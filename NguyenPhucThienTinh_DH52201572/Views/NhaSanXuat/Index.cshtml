@model IEnumerable<NguyenPhucThienTinh_DH52201572.Models.Nhasanxuat>

<!DOCTYPE html>
<html>
<head>
    <title>Quản lý nhà sản xuất</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Quản lý nhà sản xuất</h1>
        <p>
            <a asp-action="Them" class="btn btn-primary">Thêm nhà sản xuất</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Mansx)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Tennsx)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Diachi)</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Mansx</td>
                        <td>@item.Tennsx</td>
                        <td>@item.Diachi</td>
                        <td>
                            <a asp-action="Sua" asp-route-id="@item.Mansx" class="btn btn-success">Sửa</a>
                            <a asp-action="Xoa" asp-route-id="@item.Mansx" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
