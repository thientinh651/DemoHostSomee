@model NguyenPhucThienTinh_DH52201572.Models.Khachhang
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="DangNhap" method="post" class="card p-4 shadow">
            <h2 class="mb-4 text-center">Đăng nhập hệ thống</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label class="form-label font-weight-bold">Tên tài khoản</label>
                <input asp-for="Makh" class="form-control" />
                <span asp-validation-for="Makh" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label font-weight-bold">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-4 text-center">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>

            @if (ViewBag.loginCheck != null && (bool)ViewBag.loginCheck == false)
            {
                <div class="form-group mt-3 text-center">
                    <span class="font-weight-bold text-danger">
                        Bạn nhập "Tên tài khoản" hay "Mật khẩu" bị sai!
                    </span>
                </div>
            }
        </form>
    </div>
</div>
