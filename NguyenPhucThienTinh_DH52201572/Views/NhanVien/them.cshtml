@model NguyenPhucThienTinh_DH52201572.Models.Nhanvien
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<!-- Latest compiled and minified CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
		  rel="stylesheet">
	<!-- Latest compiled JavaScript -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
		</script>
		</head>
		<body>
		@{
			QLBHContext db = new QLBHContext();
			List<SelectListItem> ls = new List<SelectListItem>();
			ls.Add(new SelectListItem("Nam", "true"));
			ls.Add(new SelectListItem("Nữ", "false"));
		}
		<div class="container">
		<form asp-action="them" method="post">
			<h2>Thêm nhân viên</h2>
			<div class="form-group">
				<div asp-validation-summary="ModelOnly" class="text-danger">
					<span>Các lỗi cần khắc phục:</span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Manv" class="form-label"></label>@*<br />*@
				<input asp-for="Manv" class="form-control" />@*<br /><br />*@
				<span asp-validation-for="Manv" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Tennv" class="form-label"></label>
				<input asp-for="Tennv" class="form-control" />
				<span asp-validation-for="Tennv" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Ngaysinh" class="form-label"></label>
				<input asp-for="Ngaysinh" type="date" class="form-control" />
				<span asp-validation-for="Ngaysinh" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Phai" class="control-label"></label>
				<select asp-for="Phai" asp-items="@ls" class="form-control"></select>
				<span asp-validation-for="Phai" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Diachi" class="form-label"></label>
				<input asp-for="Diachi" class="form-control" />
				<span asp-validation-for="Diachi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<input type="submit" class="btn btn-primary" value="Save" /><br /><br />
			</div>
			<div>
				<a asp-action="Index">Quay lại</a>
			</div>
		</form>
	</div>
</body>
</html>
