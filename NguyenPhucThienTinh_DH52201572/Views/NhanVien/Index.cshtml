@model IEnumerable<NguyenPhucThienTinh_DH52201572.Models.Nhanvien>

<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Nhân viên</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Quản lý Nhân viên</h1>
        <p>
            <a asp-action="Them" class="btn btn-primary">Thêm nhân viên</a>
        </p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Manv)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Tennv)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Ngaysinh)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Phai)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Diachi)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Password)</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Manv</td>
                        <td>@item.Tennv</td>
                        <td>@item.Ngaysinh?.ToShortDateString()</td>
                        <td>
                            @(item.Phai == true ? "Nam" : "Nữ")
                        </td>
                        <td>@item.Diachi</td>
                        <td>@item.Password</td>
                        <td>
                            <a asp-action="Sua" asp-route-id="@item.Manv" class="btn btn-success">Sửa</a>
                            <a asp-action="Xoa" asp-route-id="@item.Manv" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
