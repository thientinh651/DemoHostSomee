@model NguyenPhucThienTinh_DH52201572.Models.Nhanvien

<div class="container">
	<h2>Sửa nhân viên</h2>
	<form asp-action="Sua" method="post">
		<div class="form-group">
			<label asp-for="Manv" class="form-label"></label>
			<input asp-for="Manv" class="form-control" readonly />
		</div>
		<div class="form-group">
			<label asp-for="Tennv" class="form-label"></label>
			<input asp-for="Tennv" class="form-control" />
			<span asp-validation-for="Tennv" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Ngaysinh" class="form-label"></label>
			<input asp-for="Ngaysinh" type="date" class="form-control" />
			<span asp-validation-for="Ngaysinh" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Phai" class="form-label"></label>
			<select asp-for="Phai" class="form-control">
				<option value="true">Nam</option>
				<option value="false">Nữ</option>
			</select>
			<span asp-validation-for="Phai" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Diachi" class="form-label"></label>
			<input asp-for="Diachi" class="form-control" />
			<span asp-validation-for="Diachi" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password" class="form-label"></label>
			<input asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="form-group mt-3">
			<button type="submit" class="btn btn-primary">Lưu</button>
			<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
		</div>
	</form>
</div>
