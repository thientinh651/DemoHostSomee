@model NguyenPhucThienTinh_DH52201572.Models.Hanghoa
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewBag.Title = "Thêm hàng hóa";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var loaiList = ViewBag.LoaiList as List<SelectListItem>;
    var nsxList = ViewBag.NsxList as List<SelectListItem>;
}

<h2 class="mt-3">Thêm hàng hóa</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">Trở về</a>

<form asp-action="Them" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Hình ảnh</label>
            <input type="file" name="HinhFile" class="form-control mb-2" />
            <span class="text-muted">Chọn hình</span>
        </div>

        <div class="col-md-8">
            <fieldset class="border p-3">
                <legend class="float-none w-auto px-2">Thông tin hàng hóa</legend>

                <div class="mb-3">
                    <label asp-for="Mahang" class="form-label"></label>
                    <input asp-for="Mahang" class="form-control" />
                    <span asp-validation-for="Mahang" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tenhang" class="form-label"></label>
                    <input asp-for="Tenhang" class="form-control" />
                    <span asp-validation-for="Tenhang" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Donvitinh" class="form-label"></label>
                    <input asp-for="Donvitinh" class="form-control" />
                    <span asp-validation-for="Donvitinh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dongia" class="form-label"></label>
                    <input asp-for="Dongia" class="form-control" />
                    <span asp-validation-for="Dongia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Maloai" class="form-label">Mã loại hàng hóa</label>
                    <select asp-for="Maloai" asp-items="loaiList" class="form-control"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Mansx" class="form-label">Mã nhà sản xuất</label>
                    <select asp-for="Mansx" asp-items="nsxList" class="form-control"></select>
                </div>

                <button type="submit" class="btn btn-primary">Thêm</button>
            </fieldset>
        </div>
    </div>
</form>
